<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.algebra.soccernewtry">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Soccer">
        <activity android:name=".SplashActivity"
            android:theme="@style/SplashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".game.SubmitTeamsActivity"
            android:theme="@style/Theme.Soccer">

        </activity>
        <activity android:name=".team.random.own.ChooseYourOwnActivity"
            android:theme="@style/Theme.Soccer"/>
        <activity android:name=".team.random.randompicking.GeneratedRandomTeamsActivity"
            android:theme="@style/Theme.Soccer"/>
        <activity android:name=".team.random.randomChoosing.RandomChoosingTeamActivity"
            android:theme="@style/Theme.Soccer"/>
        <activity android:name=".display.InformationActivity"
            android:theme="@style/Theme.Soccer"/>
        <activity android:name=".player.main.PlayerActivity"
            android:theme="@style/Theme.Soccer"/>
        <activity android:name=".CreateTeamsActivity"
            android:theme="@style/Theme.Soccer">

        </activity>
    </application>

</manifest>